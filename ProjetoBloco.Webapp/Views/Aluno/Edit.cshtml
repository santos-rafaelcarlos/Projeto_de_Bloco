@model ProjetoBloco.Modelo.Aluno

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Aluno</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Login)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Login)
           @* @Html.ValidationMessageFor(model => model.Login)*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Matricula)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Matricula)
            @*@Html.ValidationMessageFor(model => model.Matricula)*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ModuloID, "Modulo")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ModuloID", String.Empty)
            @Html.ValidationMessageFor(model => model.ModuloID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

